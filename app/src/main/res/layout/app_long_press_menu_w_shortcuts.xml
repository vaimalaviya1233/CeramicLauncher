<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="192dp"
    android:background="@drawable/ui_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/ui_card_title"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginEnd="12dp"/>
        <ImageView
            android:id="@+id/removeBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:src="@drawable/ic_app_remove"
            app:tint="@color/ui_card_text"/>
        <ImageView
            android:id="@+id/appinfobtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:src="@drawable/ic_info"
            app:tint="@color/ui_card_text"/>
        <ImageView
            android:id="@+id/editbtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/ui_card_text"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ui_card_separator"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shortcuts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingVertical="4dp"/>
</LinearLayout>