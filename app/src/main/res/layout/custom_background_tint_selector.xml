<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/settingsEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/background_type_label"
        style="@style/settingsbtn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_color_dropper"
        android:text="@string/background_type"/>
    <posidon.launcher.view.Spinner
        style="@style/settingsTextPreview"
        android:id="@+id/iconBackgrounds"
        android:layout_width="wrap_content"/>
</LinearLayout>