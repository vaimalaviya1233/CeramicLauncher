<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bg">
    <LinearLayout
        android:id="@+id/fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:src="@drawable/sadfish"
            android:layout_marginTop="80dp"/>
        <TextView
            android:id="@+id/failtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:padding="20dp"/>
    </LinearLayout>
    <posidon.launcher.view.GridView
        android:id="@+id/searchgrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:numColumns="1"
        android:clipToPadding="false"
        android:paddingBottom="64dp"
        android:fadingEdgeLength="64dp"
        android:fadingEdge="vertical"
        android:requiresFadingEdge="vertical"/>
    <LinearLayout
        android:id="@+id/smartbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/search_card"
        android:visibility="gone"
        android:layout_marginBottom="68dp">
        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/cardtxt"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/cardtitle"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="56dp"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_search"
            android:tint="#ffffff"/>
        <EditText
            android:id="@+id/searchTxt"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="-10dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/searchbarhint"
            android:imeOptions="actionDone"
            android:inputType="textFilter"
            android:padding="12dp"
            android:textColor="@color/cardtxt"
            android:textColorHint="@color/hint"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/kill"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_cross"
            android:padding="16dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</merge>