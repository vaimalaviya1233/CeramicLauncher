<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="22dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/alpha_bg"/>
        <View
            android:id="@+id/bgColorPrev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/hextxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#00000000"
                android:singleLine="true"
                android:maxLength="8"
                android:padding="12dp"
                android:textSize="24sp"
                android:hint="@string/colorpicker_hint"
                android:inputType="textNoSuggestions"
                android:layout_marginBottom="8dp"/>
            <TextView
                style="@style/ui_button"
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply"
                android:textColor="#ffffff"
                android:backgroundTint="#33ffffff"
                android:layout_gravity="center_horizontal|bottom"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ui_card_separator"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ui_card_separator"/>
    <LinearLayout
        android:id="@+id/seekbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <one.zagura.CeramicLauncher.view.Seekbar
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="#ff0000"
            android:progressTint="#dddd0000"
            android:progressBackgroundTint="#88550000"
            android:padding="12dp"
            android:max="255"/>
        <one.zagura.CeramicLauncher.view.Seekbar
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="#00ff00"
            android:progressTint="#dd00dd00"
            android:progressBackgroundTint="#88005500"
            android:padding="12dp"
            android:max="255"/>
        <one.zagura.CeramicLauncher.view.Seekbar
            android:id="@+id/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="#0000ff"
            android:progressTint="#dd0000dd"
            android:progressBackgroundTint="#88000088"
            android:padding="12dp"
            android:max="255"/>
        <one.zagura.CeramicLauncher.view.Seekbar
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="#ffffff"
            android:progressTint="#dddddddd"
            android:progressBackgroundTint="#88555555"
            android:padding="12dp"
            android:max="255"/>
    </LinearLayout>
</LinearLayout>