<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:id="@+id/homeView">

    <ImageView
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <posidon.launcher.view.NestedScrollView
        android:id="@+id/desktop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="18dp"
        android:requiresFadingEdge="vertical"
        android:overScrollMode="always">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/desktopContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <posidon.launcher.view.feed.WidgetSection
                    android:id="@+id/widgets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <posidon.launcher.view.feed.ContactCardView
                    android:id="@+id/contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <posidon.launcher.view.feed.MusicCard
                    android:id="@+id/musicCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <posidon.launcher.view.feed.NotificationCards
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <posidon.launcher.view.feed.NewsCards
                    android:id="@+id/feedrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/feedProgressBar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="72dp"
                android:indeterminateDrawable="@drawable/progress"
                android:indeterminateDuration="500"
                android:indeterminateTintMode="multiply"
                android:visibility="gone"/>
        </RelativeLayout>
    </posidon.launcher.view.NestedScrollView>

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="posidon.launcher.view.drawer.LockableBottomDrawerBehavior"
        android:orientation="vertical"
        app:hideable="false"
        app:peekHeight="0dp">
        <!--include layout="@layout/dock"/-->
        <posidon.launcher.view.drawer.DockView
            android:id="@+id/dock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
        <FrameLayout
            android:id="@+id/drawercontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <posidon.launcher.view.GridView
                android:id="@+id/drawergrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:stretchMode="columnWidth"
                android:listSelector="#00000000"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="72dp"
                android:requiresFadingEdge="vertical"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:alpha="0"/>
            <LinearLayout
                android:id="@+id/searchbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="openSearch">
                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_search"
                    android:tint="#ffffff"/>
                <TextView
                    android:id="@+id/searchTxt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="-16dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>