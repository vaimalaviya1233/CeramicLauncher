<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:fontFamily="@font/posidonsans"
                android:layout_marginBottom="32dp"
                android:textSize="64sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:text="@string/notification_access"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="#dddddd"
                    android:text="@string/notification_access_description"/>
                <TextView
                    android:onClick="grantNotificationAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:minWidth="64dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_bg_round"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    android:textColor="#dddddd"
                    android:text="@string/ok"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/storagecard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:text="@string/storage_access"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="#dddddd"
                    android:text="@string/storage_access_description"/>
                <TextView
                    android:onClick="grantStorageAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:minWidth="64dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_bg_round"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    android:textColor="#dddddd"
                    android:text="@string/ok"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:onClick="done2"
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@color/accent"
        android:text="@string/next"/>
</LinearLayout>