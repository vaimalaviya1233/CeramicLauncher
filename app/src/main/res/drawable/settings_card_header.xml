            <gradient
                android:startColor="#161718"
                android:endColor="#1e1d1f"
                android:angle="90"/>
            <corners
                android:topLeftRadius="19.5dp"
                android:topRightRadius="19.5dp"/>
        </shape>
    </item>
</layer-list>