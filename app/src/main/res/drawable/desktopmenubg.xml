<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <gradient android:startColor="#aa0d0e0f" android:endColor="#dd111213" android:angle="90"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="#aa0d0e0f"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
</layer-list>